    "clsx": "^2.1.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6"
  },
  "devDependencies": {
    "@son-q/config": "workspace:*",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}